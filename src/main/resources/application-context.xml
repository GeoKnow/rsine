<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
	   					   http://www.springframework.org/schema/beans/spring-beans.xsd
	   					   http://www.springframework.org/schema/util
	   					   http://www.springframework.org/schema/util/spring-util-3.0.xsd
	   					   http://www.springframework.org/schema/context
	   					   http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="eu.lod2.rsine"/>
    <util:properties id="defaults" location="classpath:/application.properties"/>

    <bean id="changeSetService" class="eu.lod2.rsine.changesetservice.ChangeSetService">
        <constructor-arg value="#{defaults['changes.port']}" />
    </bean>

    <bean id="queryDispatcher" class="eu.lod2.rsine.querydispatcher.QueryDispatcher">
        <constructor-arg value="#{defaults['managedstore.endpoint']}" />
    </bean>

    <bean id="rsine" class="eu.lod2.rsine.Rsine"/>

</beans>